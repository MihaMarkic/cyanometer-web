@section Scripts
{
    <script type="text/javascript" src="~/js/location.js"></script>
    <script type="text/javascript">
        $(function () {
            loaded('@Model.Country.ToLower()', '@Model.City.ToLower()',
                '@Model.PollutionMeasurement', '#@Model.PollutionColor',
                '@Model.PollutionText', '@Model.LevelsText');
        });
    </script>
}